{
  "name": "hkzn-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for HKZN Frontend, Backend Dashboard, and PHP API",
  "scripts": {
    "install:all": "npm install --ws --if-present",
    "build:frontend": "npm run build -w HKZN-App/frontend",
    "build:backend": "npm run build -w HKZN-App/backend",
    "build:all": "npm run build -ws --if-present",
    "dev:frontend": "npm run dev -w HKZN-App/frontend",
    "dev:backend": "npm run dev -w HKZN-App/backend",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev": "npm run dev:all"
  },
  "workspaces": [
    "HKZN-App/frontend",
    "HKZN-App/backend"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "vite": "^5.4.1"
  }
}
