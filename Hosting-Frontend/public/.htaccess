<IfModule mod_rewrite.c>
  RewriteEngine On
  # RewriteBase /React/  # Removed RewriteBase

  RewriteRule ^index\.html$ - [L]

  # Add condition: Don't rewrite if the request URI starts with /React/assets/
  RewriteCond %{REQUEST_URI} !^/React/assets/
  # If the request is not for an existing file
  RewriteCond %{REQUEST_FILENAME} !-f
  # And the request is not for an existing directory
  RewriteCond %{REQUEST_FILENAME} !-d
  # Rewrite to the index.html in the /React directory (absolute path from web root)
  RewriteRule . /React/index.html [L]
</IfModule>
